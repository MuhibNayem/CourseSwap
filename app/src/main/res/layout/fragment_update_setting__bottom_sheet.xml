<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".UpdateSetting_BottomSheet">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/editPersonalInfo_underlined_text"
            android:fontFamily="@font/roboto_medium"
            android:textColor="@color/crimson"/>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/regi_fullname"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:hint="Fullname"
            app:boxStrokeColor="#070707"
            app:boxStrokeWidthFocused="2dp"
            app:endIconMode="clear_text"
            app:endIconTint="#070707"
            app:hintTextColor="#070707"
            app:startIconDrawable="@drawable/username_icon"
            app:startIconTint="#070707">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/regi_fullname_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/aladin"
                android:inputType="text"
                android:textColor="#070707"
                android:textSize="18sp"
                android:textStyle="bold" />

        </com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/regi_username"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/regi_fullname"
            android:hint="Username"
            app:boxStrokeColor="#070707"
            app:boxStrokeWidthFocused="2dp"
            app:endIconMode="clear_text"
            app:endIconTint="#070707"
            app:hintTextColor="#070707"
            app:startIconDrawable="@drawable/user_logo"
            app:startIconTint="#070707">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/regi_username_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/aladin"
                android:inputType="text"
                android:textColor="#070707"
                android:textSize="18sp"
                android:textStyle="bold" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/regi_userEmail"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/regi_username"
            android:hint="email"
            app:boxStrokeColor="#070707"
            app:boxStrokeWidthFocused="2dp"
            app:endIconMode="clear_text"
            app:endIconTint="#070707"
            app:hintTextColor="#070707"
            app:startIconDrawable="@drawable/email_icon"
            app:startIconTint="#070707">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/regi_userEmail_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/aladin"
                android:inputType="text"
                android:textColor="#070707"
                android:textSize="18sp"
                android:textStyle="bold" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/regi_user_phone"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/regi_userEmail"
            android:hint="Phone Number"
            app:boxStrokeColor="#070707"
            app:boxStrokeWidthFocused="2dp"
            app:endIconMode="clear_text"
            app:endIconTint="#070707"
            app:hintTextColor="#070707"
            app:startIconDrawable="@drawable/call_black_icon"
            app:startIconTint="#070707"

            >

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/regi_user_phone_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/aladin"
                android:inputType="phone"
                android:textColor="#070707"
                android:textSize="18sp"
                android:textStyle="bold" />

        </com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/user_id"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/regi_user_phone"
            android:hint="Studert ID"
            app:boxStrokeColor="#070707"
            app:boxStrokeWidthFocused="2dp"
            app:endIconMode="clear_text"
            app:endIconTint="#070707"
            app:hintTextColor="#070707"
            app:startIconDrawable="@drawable/calendar_icon"
            app:startIconTint="#070707">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/user_id_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/aladin"
                android:inputType="date"
                android:textColor="#070707"
                android:textSize="18sp"
                android:textStyle="bold" />

        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/update_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/user_id"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/custom_button2"
            android:elevation="5dp"
            android:padding="20dp"
            android:text="Update"
            android:textColor="@color/WhiteColor"
            android:textSize="16sp" />
    </RelativeLayout>

</FrameLayout>